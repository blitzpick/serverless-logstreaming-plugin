{
    "plugins": [],
    "extends": ["airbnb"],
    "rules": {
        "no-unused-expressions": 0,
        "comma-dangle": 0,
        "default-case": 0,
        "global-require": 0,
        "new-cap": [2, {"capIsNew": false, "newIsCap": true}],
        "no-underscore-dangle": 0,
        "quotes": [2, "double", {"avoidEscape": true, "allowTemplateLiterals": true}],
        "no-unused-vars": [2, {
                "vars": "all",
                "args": "all",
                "argsIgnorePattern": "^_"
            }
        ],
        "indent": ["error", 4, {"SwitchCase": 1}],
        "arrow-body-style": 0,
        "no-use-before-define": ["error", { "functions": false, "classes": true }],
        "max-len": ["error", 200, 4],
        "consistent-return": 0,
        "no-shadow": 0,
        "import/no-unresolved": [2, { ignore: ['^BP-'] }],
    },
    "globals": {
        "after": false,
        "afterEach": false,
        "before": false,
        "beforeEach": false,
        "describe": false,
        "it": false,
        "require": false
    }
}
